<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFEFE"
    tools:context="com.journaldev.nearbyplaces.MainActivity">

    <RadioGroup
        android:id="@+id/radioLotteryAtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioLottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_lottery"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioAtm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_atm" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radioLotteryAtm"
        android:text="Search" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button"
        android:scrollbars="vertical"
        />

</RelativeLayout>
